<div class="uk-vertical-align uk-text-center uk-height-1-1">
    <div class="uk-vertical-align-middle">
        <form class="uk-panel uk-panel-box uk-form" (ngSubmit)="login()" #loginForm="ngForm">
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="text" placeholder="Username"
                       name="username"
                       [(ngModel)]="model.username"
                       #username="ngModel" 
                       required 
                       ngClass="{ 'uk-form-danger': (username.valid || username.pristine) }">
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" type="text" placeholder="Password"
                       name="password"
                       [(ngModel)]="model.password"
                       #password="ngModel" 
                       required
                       ngClass="{ 'uk-form-danger': (username.valid || username.pristine) }">
            </div>
            <div class="uk-form-row">
                <button type="submit" class="uk-width-1-1 uk-button uk-button-primary uk-button-large"
                        [disabled]="!loginForm.valid">Login</button>
            </div>
            @*<div class="uk-form-row uk-text-small">
                <label class="uk-float-left"><input type="checkbox"> Remember Me</label>
                <a class="uk-float-right uk-link uk-link-muted" href="#">Forgot Password?</a>
            </div>*@
        </form>
    </div>
</div>